<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card worker__card">
      <div class="card-header worker__card_header">
        <h3 class="add__worker_title mb-0">
          Изменить администратора</h3>
      </div>
      <div class="card-body">
        <form
          action="/admin/edit"
          class="d-flex flex-column flex-md-row"
          method="post"
          enctype="multipart/form-data"
        >
          <div
            class="col-12 d-flex flex-column justify-content-center align-items-center"
          >
            <div class="form-group" style="width: 100%">
              <label for="name">
                Имя администратора</label>
              <input
                type="text"
                id="name"
                class="form-control"
                name="name"
                value="{{admin.name}}"
              />
            </div>
            <div class="form-group" style="width: 100%">
              <label for="inputClientCompany">Эл.почта</label>
              <input
                type="text"
                id="inputClientCompany"
                class="form-control"
                name="email"
                value="{{admin.email}}"
              />
            </div>
            <div class="form-group" style="width: 100%">
              <label for="inputClientCompany">
                Прежний пароль</label>
              {{#if adminError}}
                <p class="errorAlert">{{adminError}}</p>
              {{/if}}
              <input
                type="password"
                id="inputClientCompany"
                class="form-control"
                name="oldpassword"
                required
              />
            </div>
            <div class="form-group" style="width: 100%">
              <label for="inputClientCompany">
                Новый пароль</label>
              <input
                type="password"
                id="inputClientCompany"
                class="form-control"
                name="password"
                required
              />
            </div>
            <div class="form-group" style="width: 100%">
              <div class="custom-file">
                <label for="avatar">Аватар</label>
                <input
                  type="file"
                  class="custom-file-input"
                  id="avatar"
                  value="{{admin.avatar}}"
                  name="avatar"
                />
                <label
                  class="custom-file-label"
                  style="display: flex; overflow: hidden; line-height: 30px;"
                  for="avatar"
                >{{admin.avatar}}</label>
              </div>
            </div>
            <input type="hidden" name="id" id="{{admin._id}}" />
            <div class="edit_admin_btn">
              <button type="submit">Изменить</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>