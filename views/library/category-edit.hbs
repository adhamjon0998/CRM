<div class="row justify-content-center">
  <div class="col-md-6 justify-content-start align-items-center mt-4">
    <div class="card card-primary1">
      <form
        action="/library/edit/{{category.id}}"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="card-body">
          <div class="form-group">
            <label class="library-title choose" for="name">Редактировать</label>
            <input
              type="text"
              class="form-control inp1"
              id="name"
              placeholder="Library name"
              name="name"
              value="{{category.name}}"
              required
            />
          </div>
          <div class="form-group">
            <label class="library-title choose" for="img">Картинка</label>
            <div class="input-group">
              <div class="custom-file">
                <input
                  type="file"
                  class="custom-file-input"
                  id="img"
                  name="img"
                />
                <label
                  class="custom-file-label inp1 fileLabel"
                  for="img"
                >{{category.img}}</label>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer submit">
          <button type="submit" class="buttonSubmit">Изменить</button>
        </div>
      </form>
    </div>
  </div>
</div>