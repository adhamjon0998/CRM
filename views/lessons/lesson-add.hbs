<div class="row justify-content-center">
  <div class="col-sm-8 col-md-6 justify-content-start align-items-center mt-4 ">
    <div class="card card-primary1">
      <form action="/lesson/add" method="POST">
        <div class="card-header addlesson" style="padding-bottom: 2rem;">
          <h3 class="card-title adleesson">Добавить урок</h3>
        </div>
        <div class="card-body mainpage">
          <div class="form-group form123">
            <label class="library-title choose" for="name">Название урока</label>
            <input type="text" class="form-control inp1" id="name" name="name" required />
          </div>

          <div class="form-group form123">
            <label class="library-title choose" for="url">Ссылка для ролика</label>
            <input type="text" class="form-control inp1" id="url"  name="url" required />
          </div>
          <div class="form-group form123">
            <label class="library-title choose">Выбрать библиотеку</label>
            <select name="libraryId" class="form-control inp1">
              {{#each categories}}
              <option value="{{id}}">{{name}}</option>
              {{/each}}
            </select>
          </div>
        </div>
        <div class="card-footer submit">
          <button type="submit" class="buttonSubmit">Добавить</button>
        </div>
      </form>
    </div>
  </div>
</div>